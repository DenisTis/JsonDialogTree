{
    "$id": "Choice.json",
    "description": "A choice to a given situation",
    "type": "object",
    "properties": {
        "textId": {
            "type": "string"
        },
        "displayCondition": {
            "type": "string",
            "pattern": "\\b[>=<]\\b"
        },
        "outcomes": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "ChoiceOutcome.json#"
            }
        }
    },
    "required": ["textId", "outcomes"]
}