{
    "$id": "DialogItem.json",
    "description": "Single dialog entry",
    "type": "object",
    "properties": {
        "id": { "type": "string" },
        "introduction": {
            "type": "string"
        },
        "participantsItems": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "ParticipantItem.json#"
            }
        },
        "choices": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "Choice.json#"
            }
        }
    },
    "required": ["entryId", "choices"]
}